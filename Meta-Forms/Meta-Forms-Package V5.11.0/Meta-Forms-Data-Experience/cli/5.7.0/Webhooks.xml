<?xml version="1.0" encoding="utf-16"?>
<BatchDataSyncConfig name="DXDF - Cinchy - DXDATA - Webhooks" version="1.0.0" xmlns="http://www.cinchy.co">
    <Parameters>
        <Parameter name="filePath"/>
        <Parameter name="dxdGuid"/>
    </Parameters>
    <DelimitedDataSource source="PATH" path="@filePath" delimiter="," textQualifier="&quot;" headerRowsToIgnore="0" encoding="UTF8" useHeaderRecord="true">
        <Schema>
            <Column name="Forward Payload As Parameter" dataType="Text" trimWhitespace="true" isMandatory="false" validateData="false"/>
            <Column name="Key" dataType="Text" trimWhitespace="true" isMandatory="false" validateData="false"/>
            <Column name="Run As" dataType="Text" trimWhitespace="true" isMandatory="false" validateData="false"/>
            <Column name="Saved Query" dataType="Text" trimWhitespace="true" isMandatory="false" validateData="false"/>
            <Column name="Sync GUID" dataType="Text" trimWhitespace="true" isMandatory="false" validateData="false"/>
        </Schema>
    </DelimitedDataSource>
    <CinchyTableTarget reconcileData="true" domain="Cinchy" table="Webhooks" suppressDuplicateErrors="false" degreeOfParallelism="1">
        <ColumnMappings>
            <ColumnMapping sourceColumn="Forward Payload As Parameter" targetColumn="Forward Payload As Parameter"/>
            <ColumnMapping sourceColumn="Key" targetColumn="Key"/>
            <ColumnMapping sourceColumn="Run As" targetColumn="Run As" linkColumn="Display Name"/>
            <ColumnMapping sourceColumn="Saved Query" targetColumn="Saved Query" linkColumn="Sync GUID"/>
            <ColumnMapping sourceColumn="Sync GUID" targetColumn="Sync GUID"/>
        </ColumnMappings>
        <Filter>ISNULL([Sync GUID],'') LIKE '@dxdGuid_%'</Filter>
        <SyncKey readonly="false">
            <SyncKeyColumnReference name="Sync GUID"/>
        </SyncKey>
        <NewRecordBehaviour type="INSERT"/>
        <DroppedRecordBehaviour type="DELETE"/>
        <ChangedRecordBehaviour type="UPDATE"/>
        <PostSyncScripts/>
    </CinchyTableTarget>
</BatchDataSyncConfig>
